  .tab-bar-item {
    display: inline-block;
    color: #909399;
    line-height: 48px;
    width: 50%;
    text-align: center;
    vertical-align: middle;
  }
  .middle-tab-bar-item{
    background: #c4cafd;
    color: white;
    border-radius: 50%;
    position: fixed;
    width: 48px;
    height: 48px;
    left: 50%;
    bottom: 20px;
    transform: translateX(-50%);
    text-align: center;
    vertical-align: middle;
  }
  .tab-bar-item .cover-image {
    width: 27px;
    height: 27px;
  }
  
  .tab-bar-item .cover-view {
    font-size: 18px;
    line-height: 48px;
  }
  .middle-tab-bar-item .cover-view {
    font-size: 28px;
    line-height: 48px;
    color: #fff;
  }
  
  .add-btn{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -15px;
    z-index: 999;
    width: 30px;
    border-radius: 50%;
  }