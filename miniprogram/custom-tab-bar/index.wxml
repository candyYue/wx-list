<cover-view class="tab-bar">
  <cover-view wx:for="{{list}}" wx:key="index" class="{{item.middle == true?'tab-bar-item middle-tab-bar-item':'tab-bar-item'}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-view style="color: {{selected === index ? selectedColor : color}}" class="cover-view">{{item.text}}</cover-view>
  </cover-view>
</cover-view>