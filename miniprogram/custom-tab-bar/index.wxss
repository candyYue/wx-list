.tab-bar {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 48px;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
    background: white;
    height: 48px;
    border-top: 1px solid #c4cafd;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.2); 
    z-index: 999999;
  }
  
