/* pages/map.wxss */
.map_container{
    position: absolute;
    top: 0;
    bottom: 80px;
    left: 0;
    right: 0;
  }
  .map{
    width: 100%;
    height: 100%;
  }
  .map_text{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 50px;
    height: 80px;
    background: #fff;
    padding: 0 15px;
  }
  text{
    margin: 5px 0;
    display: block;
    font-size:12px;
  }
  .h1{
    margin: 15px 0;
    font-size:15px;
  }
  .map_search{
    position: absolute;
    top: 0;
    left: 0;
    background-color: #fff;
    z-index: 9;
    width: 100%;
  }
  .section{
    width: 100%;
  }
  .section input{
    width:95%;
    margin:3px auto;
    border:1px solid #c3c3c3;
    height:30px;
    border-radius: 3px;
  }
  .text_box{
    margin: 10px 25px;
    border-bottom:1px solid #c3c3c3;
    padding-bottom:10px
  }

  .detail_button{
    position:absolute;
    bottom: 30px;
    right: 10px;
    padding: 3px 5px;
    color: #fff;
    background: #0091ff;
    width:50px;
    text-align:center;
    border-radius:5px;
  }

  .flex-style{
    display: flex;
  }
  .flex-item{
    height: 35px; 
    line-height: 35px;
    text-align: center;
    flex: 1
  }
  .flex-item.active{
    color:#0091ff;
  }